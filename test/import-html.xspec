<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec">
	<x:scenario label="A single form should be marked as single">
		<x:context>
			<hnDict xmlns="http://dict.hunnor.net">
				<entryGrp>
					<entry>
						<formGrp>
							<form></form>
						</formGrp>
					</entry>
				</entryGrp>
			</hnDict>
		</x:context>
		<x:expect label="A single form should be marked as single">
			<add>
				<doc>
					<field name="html"><![CDATA[<![CDATA[]]><ul class="form single">
						<li>
							<span class="orth"></span>
						</li>
					</ul><![CDATA[]]]]><![CDATA[>]]></field>
				</doc>
			</add>
		</x:expect>
	</x:scenario>
