	<x:scenario label="Labels should be displayed with proper glue strings">
		<x:context>
			<hnDict xmlns="http://dict.hunnor.net">
				<entryGrp>
					<entry>
						<senseGrp>
							<sense>
								<lbl>lbl1</lbl>
								<lbl>lbl2</lbl>
							</sense>
							<sense>
								<trans>trans1</trans>
								<lbl>lbl3</lbl>
							</sense>
						</senseGrp>
					</entry>
				</entryGrp>
			</hnDict>
		</x:context>
		<x:expect label="Labels should be displayed with proper glue strings">
			<add>
				<doc>
					<field name="trans">trans1</field>
					<field name="html"><![CDATA[<![CDATA[]]><ol class="senseGrp single">
						<li>
							<ol class="sense">
								<li>
									<ul>
										<li class="lbl">
											<span class="lbl">lbl1</span>
										</li>
										<li class="lbl">
											<span class="glue">, </span>
											<span class="lbl">lbl2</span>
										</li>
									</ul>
								</li>
								<li>
									<ul>
										<li class="trans">
											<span class="trans">trans1</span>
										</li>
										<li class="lbl">
											<span class="glue">, </span>
											<span class="lbl">lbl3</span>
										</li>
									</ul>
								</li>
							</ol>
						</li>
					</ol><![CDATA[]]]]><![CDATA[>]]></field>
				</doc>
			</add>
		</x:expect>
	</x:scenario>
